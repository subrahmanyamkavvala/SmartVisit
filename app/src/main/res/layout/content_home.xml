<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="smartvisit.com.smartvisit.HomeActivity"
    tools:showIn="@layout/app_bar_home">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getCustomer"
        android:id="@+id/getCustomer"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="addvisitor"
        android:id="@+id/addvisitor"
        android:layout_alignTop="@+id/getCustomer"
        android:layout_alignLeft="@+id/viewvisitor"
        android:layout_alignStart="@+id/viewvisitor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="viewvisitor"
        android:id="@+id/viewvisitor"
        android:layout_marginRight="58dp"
        android:layout_marginEnd="58dp"
        android:layout_below="@+id/addvisitor"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="signup"
        android:id="@+id/signup"
        android:layout_below="@+id/viewvisitor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getemployee"
        android:id="@+id/getemployee"
        android:layout_alignTop="@+id/signup"
        android:layout_alignRight="@+id/viewvisitor"
        android:layout_alignEnd="@+id/viewvisitor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="getapartment"
        android:id="@+id/getapartment"
        android:layout_below="@+id/signup"
        android:layout_toLeftOf="@+id/getemployee"
        android:layout_toStartOf="@+id/getemployee" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="signout visitor"
        android:id="@+id/signoutvisitor"
        android:layout_below="@+id/getapartment"
        android:layout_alignLeft="@+id/getapartment"
        android:layout_alignStart="@+id/getapartment" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="forgotpassword"
        android:id="@+id/forgotpassword"
        android:layout_below="@+id/signoutvisitor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp" />
</RelativeLayout>
